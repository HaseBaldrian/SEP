<% if notice %>
	<p id="notice" ><%= notice %></p>
<% end %>

<% if session[:user_id] == 19%>
	<h1>Hallo Superadmin!</h1>

	<h2>Listing users</h2>
	
	<table class="table table-striped">
	  <tr>
	    <th>Name</th>
	    <th>Email</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	
	<% @users.each do |user| %>
	  <tr id=<%= user.id %>>
	    <td> <%= user.name %></td>
    	<td><%= user.email %></td>
	    <td><%= link_to 'Show', user %></td>
	    <td><%= link_to 'Edit', edit_user_path(user) %></td>
	    <td><%= link_to 'Destroy', user, confirm: 'Tatsächlich löschen?', 
	    						:method => :delete, :remote => true %></td>
	  </tr>
	<% end %>
	</table>
		
	<br />

	<%= link_to 'New User', new_user_path, :class => "btn" %>
	
<% else %>

	<h1>Hallo <%= User.find_by_id(session[:user_id]).name %>!</h1>

	<%= link_to "Veranstaltungsübersicht", users_path, :class => "btn"%>

	
<% end %>